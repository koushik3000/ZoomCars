@model ZoomCars.Models.Customer1

@{
    ViewData["Title"] = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .row {
        background-color: rgba(155, 197, 248, 0.5);
        width: 600px;
        border: 1px solid rgb(15, 0, 54);
        padding: 35px;
        margin: 10px;
        align-items: left;
    }

    body {
        background-image: url("https://c4.wallpaperflare.com/wallpaper/632/790/513/digital-digital-art-artwork-city-lights-hd-wallpaper-preview.jpg");
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100%;
    }

    span {
        color: red;
        font-style: bold;
    }

    button {
        color: white;
        background-color: rgba(244, 0, 0, 0.5);
    }
</style>
<body>
    <h1>Signup</h1>

    <h4>Customer1</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form class="form" asp-action="Signup" onsubmit="return validateUserName() || ValidateEmail() || validatePassword() || validateDate() || validateConfirmPassword() " method="post">
                <table>
                    <tr>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                        <td>
                            <label asp-for="Name" class="control-label"></label>
                        </td>
                        <td>
                            <input type="text" asp-for="Name" class="form-control" />
                        </td>
                        <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        </tr>
        <tr>
            <div class="form-group">
            <td>
                <label asp-for="Email" class="control-label"></label>
            </td>
            <td><input type="email" asp-for="Email" class="form-control" /></td>
            <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    </tr>
    <tr>
        <div class="form-group">
        <td><label asp-for="MobilePhone" class="control-label"></label></td>
        <td><input type="text" asp-for="MobilePhone" class="form-control" /></td>
        <span asp-validation-for="MobilePhone" class="text-danger"></span>
        </div>
    </tr>
    <tr>
        <div class="form-group">
        <td><label asp-for="Password" class="control-label"></label></td>
        <td><input type="password" asp-for="Password" class="form-control" /></td>
        <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </tr>
    <tr>
        <td><b><label for="psw-repeat">Confirm Password: </label></b></td>
        <td><input type="password" id="confirm" placeholder="Confirm Password" onabort="validateConfirmPassword()" name="psw-repeat"></td>
        <td><span id="confError"></span></td>
    </tr>
    <tr>
        <div class="form-group">
        <td><input type="submit" value="Sign Up" class="btn btn-primary" /></td>
        </div>
    </tr>
    </table>
    </form>
    </div>

    </div>

</body>
